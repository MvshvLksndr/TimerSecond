<Window x:Class="TimerSecund.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TimerSecund"
        mc:Ignorable="d"
        Title="Секундомер" Height="120" MaxHeight="120" Width="300" MaxWidth="300" MinWidth="300" MinHeight="120">
    <Grid>
        <StackPanel>
            <Border Margin="5" Padding="5" BorderBrush="Black" BorderThickness="1">
                <TextBlock Name="tbTime"></TextBlock>
            </Border>
            <DockPanel HorizontalAlignment="Center">
                <Button Margin = "5" Padding = "5" Click="ButtonStart_Click">Старт</Button>
                <Button Margin = "5" Padding = "5" Click="ButtonPause_Click" Name="btnPause">Продолжить</Button>
                <Button Margin = "5" Padding = "5" Click="ButtonStop_Click">Сбросить</Button>
            </DockPanel>
        </StackPanel>
    </Grid>
</Window>
